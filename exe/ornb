#!/usr/bin/env ruby
require 'colorize'
require 'thor'
require 'fileutils'
require "ornb"

module Ornb
  class CLI < Thor
    def initialize(*argv)
      super(*argv)
    end

    desc 'readme', 'make initial README.org'
    def readme(*argv)
      lib = File.expand_path("../../lib", __FILE__)
      p s_file = File.join(lib, 'readme', 'README.org')
      FileUtils.cp(s_file, '.')
    end
  end
end

Ornb::CLI.start(ARGV)
